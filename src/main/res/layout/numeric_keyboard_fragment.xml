            android:textSize="25dp"
            android:textStyle="bold"
            android:width="60dp" />

        <Button
            android:id="@+id/button_digit_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="60dp"
            android:tag="2"
            android:text="2"
            android:textSize="25dp"
            android:textStyle="bold"
            android:width="60dp" />

        <Button
            android:id="@+id/button_digit_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="60dp"
            android:tag="3"
            android:text="3"
            android:textSize="25dp"
            android:textStyle="bold"
            android:width="60dp" />

    </TableRow>

