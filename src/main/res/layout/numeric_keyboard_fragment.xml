            android:textSize="25dp"
            android:textStyle="bold"
            android:width="60dp" />

        <Button
            android:id="@+id/button_digit_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="60dp"
            android:tag="0"
            android:text="0"
            android:textSize="25dp"
            android:textStyle="bold"
            android:width="60dp" />

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="60dp"
            android:tag="C"
            android:text="C"
            android:textSize="25dp"
            android:textStyle="bold"
            android:width="60dp" />

    </TableRow>
