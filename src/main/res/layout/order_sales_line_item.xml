<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <LinearLayout
        android:id="@+id/linearLayoutSalesSumQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >
        
    <TextView
        android:id="@+id/textViewOrderSalesLineSum"
        style="android:textViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Sum" />
    
    <TextView
        android:id="@+id/textViewOrderSalesLineQuantity"
        style="android:textViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Quantity" />
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/textViewOrderSalesLineNomenclature"
        style="android:textViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/linearLayoutSalesSumQuantity"
        android:text="TextView" />

</RelativeLayout>
    