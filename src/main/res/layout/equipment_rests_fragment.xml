<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutEquipmentRests"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewEquipmentHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <net.thepaksoft.fdtrainer.NestedListView
        android:id="@+id/listViewEquipmentRests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/greydivider"
        android:dividerHeight="@dimen/twodp"
        android:drawSelectorOnTop="false"
        android:fastScrollEnabled="true"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:textFilterEnabled="true" />
    
    
	<TextView
        android:id="@+id/empty_equipment_rests"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/list_is_empty" />    

</LinearLayout>