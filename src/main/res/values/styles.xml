<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here.
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        -->
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="myBackground">@android:color/background_dark</item>
        <item name="myTextColor">@android:color/white</item>
        <!-- используется в качесве цвета шрифта заголовков Toolbar -->
        <item name="myColorToolbarBackground">@color/myColorBlue</item>
    </style>

    <style name="LightAppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here.
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        -->
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="myBackground">@android:color/background_light</item>
        <item name="myTextColor">@android:color/black</item>
        <!-- используется в качесве цвета шрифта заголовков Toolbar -->
        <item name="myColorToolbarBackground">@color/myColorBlue</item>
    </style>

    <style name="textViewDolgPast">
        <item name="android:textColor">@color/dolg_past</item>
    </style>

    <style name="textViewEmail">
        <item name="android:textColor">@color/myColorBlue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- это заголовок Havigation Drawer-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
