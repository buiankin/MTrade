<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:overScrollMode="never"
    android:scrollbars="vertical" >

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/textViewQuantityNomenclatureDescr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:cursorVisible="false"
            android:ellipsize="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberDecimal"
            android:singleLine="true" />

        <Button
            android:id="@+id/buttonQuantityBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:onClick="onDigit_back"
            android:text="&lt;"
            android:textSize="25sp" />

        <ToggleButton
            android:id="@+id/toggleButtonPacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textOff="@string/toggle_button_nomenclature_packs"
            android:textOn="@string/toggle_button_nomenclature_packs" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvQuantityRest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_rests" />

            <TextView
                android:id="@+id/tvQuantityMinQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_min_quantity" />

            <TextView
                android:id="@+id/tvMultiplicity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_multiplicity" />

            <TextView
                android:id="@+id/tvAdvanced1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Advanced1" />

            <TextView
                android:id="@+id/tvAdvanced2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Advanced2" />


        </LinearLayout>

        <Button
            android:id="@+id/btnQuantityRightOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="0"
            android:text="@android:string/ok" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="60dp"
            android:onClick="onDigit_clear"
            android:text="C"
            android:textSize="25dp"
            android:textStyle="bold"
            android:width="60dp" />

        <Button
            android:id="@+id/button_dot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="60dp"
            android:onClick="onDigit_dot"
            android:text="."
            android:textSize="25dp"
            android:textStyle="bold"
            android:width="60dp" />

        <Button
            android:id="@+id/button_digit_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="60dp"
            android:onClick="onDigit_0"
            android:text="0"
            android:textSize="25dp"
            android:textStyle="bold"
            android:width="60dp" />

        <Button
            android:id="@+id/button_digit_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="60dp"
            android:onClick="onDigit_1"
            android:text="1"
            android:textSize="25dp"
            android:textStyle="bold"
            android:width="60dp" />

        <Button
            android:id="@+id/button_digit_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="60dp"
            android:onClick="onDigit_2"
            android:text="2"
            android:textSize="25dp"
            android:textStyle="bold"
            android:width="60dp" />

        <Button
            android:id="@+id/button_digit_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="60dp"
            android:onClick="onDigit_3"
            android:text="3"
            android:textSize="25dp"
            android:textStyle="bold"
            android:width="60dp" />

        <Button
            android:id="@+id/button_digit_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="60dp"
            android:onClick="onDigit_4"
            android:text="4"
            android:textSize="25dp"
            android:textStyle="bold"
            android:width="60dp" />

        <Button
            android:id="@+id/button_digit_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="60dp"
            android:onClick="onDigit_5"
            android:text="5"
            android:textSize="25dp"
            android:textStyle="bold"
            android:width="60dp" />

        <Button
            android:id="@+id/button_digit_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="60dp"
            android:onClick="onDigit_6"
            android:text="6"
            android:textSize="25dp"
            android:textStyle="bold"
            android:width="60dp" />

        <Button
            android:id="@+id/button_digit_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="60dp"
            android:onClick="onDigit_7"
            android:text="7"
            android:textSize="25dp"
            android:textStyle="bold"
            android:width="60dp" />

        <Button
            android:id="@+id/button_digit_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="60dp"
            android:onClick="onDigit_8"
            android:text="8"
            android:textSize="25dp"
            android:textStyle="bold"
            android:width="60dp" />

        <Button
            android:id="@+id/button_digit_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="60dp"
            android:onClick="onDigit_9"
            android:text="9"
            android:textSize="25dp"
            android:textStyle="bold"
            android:width="60dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvQuantityPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_price" />

        <TextView
            android:id="@+id/tvQuantityPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvExchangeState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_sum" />

        <TextView
            android:id="@+id/tvQuantitySum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="TextView" />

    </LinearLayout>
    
    <TextView
         android:id="@+id/tvShippingTime"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/label_order_time" />
    
    <LinearLayout
        android:id="@+id/layoutShippingTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
		<EditText
	       android:id="@+id/etQuantityTime"
	       android:layout_width="0dp"
	       android:layout_weight="1"
	       android:layout_height="fill_parent"
	       android:ellipsize="end"
	       android:ems="5"
	       android:hint="@string/hint_time_not_set"
	       android:imeOptions="actionNext"
	       android:inputType="time"
	       android:text="00:00" />
		
		<Button
           android:id="@+id/buttonQuantitySelectTime"
           android:layout_width="wrap_content"
           android:layout_height="fill_parent"
           android:text="..." />		
		
	</LinearLayout>
    

    <TextView
        android:id="@+id/textViewComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_comment" />

    <EditText
        android:id="@+id/etComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textNoSuggestions"
        android:singleLine="true" />
    
    <LinearLayout
        android:id="@+id/layoutQuantityButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnQuantityOk"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@android:string/ok" />

        <Button
            android:id="@+id/btnQuantityCancel"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@android:string/cancel" />

    </LinearLayout>
    
    <net.thepaksoft.fdtrainer.NestedListView
        android:id="@+id/listViewQuantitySalesHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/greydivider"
        android:dividerHeight="@dimen/twodp"
        android:drawSelectorOnTop="false"
        android:fastScrollEnabled="true"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:textFilterEnabled="true">
        
    </net.thepaksoft.fdtrainer.NestedListView>

    <ImageView
        android:id="@+id/imageViewQuantity"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        />

</LinearLayout>
</ScrollView>